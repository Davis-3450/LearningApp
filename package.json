{
  "name": "learning-app-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/frontend",
    "apps/backend",
    "shared"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build --filter=apps/frontend",
    "start": "npm run start --workspace=apps/frontend",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "build:backend": "npm run build --workspace=apps/backend",
    "postinstall": "npm --workspace=apps/frontend rebuild lightningcss --update-binary"
  },
  "devDependencies": {
    "typescript": "^5"
  },
  "packageManager": "bun@1.2.17",
  "dependencies": {
    "turbo": "^2.5.4"
  }
}
